@model ProductUpdateModel
<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        @* <partial name="_ResponsePartial" /> *@
        <div class="card-header">
            <h3 class="card-Name">Update Existing Product</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Update" asp-controller="Product" asp-area="Admin"
              asp-antiforgery="true">
            <input type="hidden" asp-for="productM.Id" />
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="productM.Name">Name</label>
                    <input type="text" class="form-control" asp-for="productM.Name">
                </div>
                <div class="form-group">
                    <label asp-for="productM.Price">Price</label>
                    <input type="text" class="form-control" asp-for="productM.Price">
                </div>
                <div class="form-group">
                    <label asp-for="productM.Weight">Weight</label>
                    <input type="number" class="form-control" asp-for="productM.Weight" min="0" step="any">
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>