@model ProductCreateModel
<form asp-action="Create" asp-controller="Product" asp-area="Admin"
      asp-antiforgery="true">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="ProductName">Name</label>
            <input type="text" class="form-control" asp-for="ProductName">
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice">Price</label>
            <input type="number" class="form-control" asp-for="ProductPrice" min="0">
        </div>
        <div class="form-group">
            <label asp-for="ProductWeight">Wight</label>
            <input type="number" class="form-control" asp-for="ProductWeight" step="any">
        </div> 
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>